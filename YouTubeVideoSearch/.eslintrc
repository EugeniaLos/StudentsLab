{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "prettier", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "ignorePatterns": ["dist/", "node_modules/"],
  "rules": {
    "linebreak-style": 0,
    "react/prefer-stateless-function": [
      0,
      {
        "ignorePureComponents": false
      }
    ]
  }
}
